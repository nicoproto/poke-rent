<div class="message-container <%= user_is_messages_author ? 'text-right' : '' %>" id="message-<%= message.id %>">
  <i class="author">
    <span><%= message.user.nickname %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>