
<div class="message-container <%= user_is_messages_author ? 'me' : '' %>" id="message-<%= message.id %>">
  <%= cl_image_tag message.user.avatar.key, class: "avatar" %>
  <div class="message-content">
    <i class="author">
      <small><%= message.created_at.strftime("%l:%M%p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
</div>