<div class="container col-4">
  <h1 class="text-center"><%= @pokemon.name.capitalize %></h1>
  <p><strong>Price: </strong>$<%= @pokemon.price %> / day</p>
  <p><strong>Location: </strong><%= @pokemon.location %></p>
  <div>
    <h4>Description</h4>
    <p><%= @pokemon.description %></p>
  </div>

  <div>
    <h4>Types</h4>
    <% @pokemon.tag_list.each do |kind| %>
      <div class="badge badge-primary mb-3">
        <%= kind %>
      </div>
    <% end %>
  </div>

  <h4>Reviews</h4>
  <% @pokemon.reviews.each do |review| %>
    <div>
      <p><%= review.rating %> stars - <%= review.content %></p>
      <p class="w-100 text-right"><strong>- <%= review.user.nickname.capitalize %></strong></p>
    </div>
  <% end %>

  <h4>Manage</h4>
  <%= link_to "Book", new_pokemon_booking_path(@pokemon), class: "btn btn-primary"  %>
  <%= link_to "Edit", edit_pokemon_path(@pokemon), class: "btn btn-outline-primary"  %>
  <%= link_to "Delete", pokemon_path(@pokemon), method: :delete, data: { confirm: "Are you sure you want to delete #{@pokemon.name.capitalize}?"} , class: "btn btn-danger"  %>
  <%= link_to "Back", pokemons_path, class: "btn btn-link"  %>
</div>